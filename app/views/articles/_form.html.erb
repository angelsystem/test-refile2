<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :body %>
    <%= attachment_image_tag f.object, :image, :fill, 100, 100, class: 'img-circle', fallback: "default.png" %>
    <%#= f.object.presigned_url %>
    <div class="uploader">
      <%#= f.attachment_field :image, direct: true %>
      <%= f.attachment_field :image, presigned: true, direct: true, multilple: true, data: { remote_id: :article_image_cache_id } %>
    </div>
    <div class="progress">
      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
      aria-valuemin="0" aria-valuemax="100" style="width:0%">
        <span class="sr-only" id='progress-bar-text'></span>
      </div>
    </div>
    <div id="image"></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
