<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :content %>
    <%= f.input :pictures_files, as: :attachment, direct: true, multiple: true %>
    <div id="image"></div>
    <% i = 0 %>
    <div>
      <%= f.simple_fields_for :pictures do |p| %>      
        <%= image_tag attachment_url(@blog.pictures[i], :file, :fill, 100, 100) %>
        <%= p.input :_destroy, label: 'eliminar', as: :boolean %>
        <% i+=1 %>
      <% end %>
    </div>    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
